@page "/Music/"

@if (createNewAlbum)
{
    <MusicItemComponent DisplayCreate="@ButtonNew"></MusicItemComponent>
}
else
{
    <h1>Music</h1>

    @if (myService.Response.List != null)
    {
        <div class="row g-3">
            @foreach(DTO.Music.Album album in myService.Response.List)
            {
                <div class="col-md-6 card p-2">
                    <div class="card-title">
                        <h4><label class="form-text">@album.ArtistName</label></h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 card-deck">
                            @foreach(DTO.Music.CD cd in album.CDList)
                            {
                                <div class="card p-2">
                                    <div class="card-title">
                                        <h5><label class="form-text">@cd.Name (@cd.Genere)</label></h5>
                                    </div>
                                    <div class="card-body">
                                        <label class="form-text">Track</label>
                                        <ul class="list-group">
                                            @foreach(DTO.Music.Track track in cd.TrackList)
                                            {
                                                <li class="list-group-item">
                                                    <label class="form-text">@track.Number</label>
                                                    <label class="form-text">@track.Title</label>
                                                    <label class="form-text">@track.Length</label>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="card-footer border-white">
                                        <input type="button" value="Remove" class="btn btn-danger" @onclick="() => album.CDList.Remove(cd)" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer border-white">
                        <input type="button" value="Remove" class="btn btn-danger" @onclick="() => myService.Response.List.Remove(album)" />
                    </div>
                </div>
            }
        </div>
    }

  <input type="button" value="New" class="btn btn-primary" @onclick="@ButtonNew" />
}

@code {
    private BLL.Music.Service myService = new BLL.Music.Service();

    private Boolean createNewAlbum = false;

    protected async override void OnInitialized()
    {
        await myService.GetList(null);
    }

    async Task ButtonNew()
    {
            createNewAlbum = !createNewAlbum;
    }
}
