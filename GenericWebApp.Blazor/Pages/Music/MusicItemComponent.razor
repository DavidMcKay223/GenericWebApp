@using GenericWebApp.DTO.Music
@using GenericWebApp.BLL.Music
@using GenericWebApp.Blazor.Shared.Common

<h3 class="my-4">Music Item</h3>

@if (Album == null)
{
    <div class="alert alert-warning">No album selected.</div>
}
else
{
    <DisplayError ErrorList="@Service.Response.ErrorList" />

    <EditForm Model="@Album" OnValidSubmit="@ButtonSave">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Album Details</h4>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label for="text_ArtistName" class="form-label">Artist Name</label>
                        <InputText id="text_ArtistName" class="form-control" @bind-Value="Album.ArtistName" />
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    @if (Album.CDList != null)
                    {
                        @foreach (var cd in Album.CDList)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5>CD Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label for="text_CDName" class="form-label">CD Name</label>
                                            <InputText id="text_CDName" class="form-control" @bind-Value="cd.Name" />
                                        </div>
                                        <div class="col-md-6">
                                            <label for="ddl_genre" class="form-label">Genre</label>
                                            <InputSelect id="ddl_genre" class="form-select" @bind-Value="cd.Genre_ID">
                                                <option value="">Select Genre</option>
                                                @foreach (var myGenre in myGenreList)
                                                {
                                                    <option value="@myGenre.ID">@myGenre.Description</option>
                                                }
                                            </InputSelect>
                                        </div>
                                    </div>
                                    <div class="row g-3 mt-3">
                                        @if (cd.TrackList != null)
                                        {
                                            @foreach (var track in cd.TrackList)
                                            {
                                                <div class="col-md-2">
                                                    <label for="text_TrackNumber" class="form-label">Track Number</label>
                                                    <InputNumber id="text_TrackNumber" class="form-control" @bind-Value="track.Number" />
                                                </div>
                                                <div class="col-md-5">
                                                    <label for="text_TrackTitle" class="form-label">Track Title</label>
                                                    <InputText id="text_TrackTitle" class="form-control" @bind-Value="track.Title" />
                                                </div>
                                                <div class="col-md-5">
                                                    <label for="text_TrackLength" class="form-label">Track Length</label>
                                                    <CustomTimeInput TValue="TimeSpan" @bind-Value="track.Length" class="form-control" id="text_TrackLength" />
                                                </div>
                                            }
                                        }
                                        <div class="col-md-12 mt-3">
                                            <button type="button" class="btn btn-primary" @onclick="() => ButtonNewTrack(cd)">New Track</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    <div class="col-md-12 mt-3">
                        <button type="button" class="btn btn-primary" @onclick="@ButtonNewCD">New CD</button>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
}

<div class="mt-4">
    <button type="button" class="btn btn-primary me-2" @onclick="@ButtonSave">Save</button>
    <button type="button" class="btn btn-secondary" @onclick="@ButtonCancel">Cancel</button>
</div>

@code {
    [Parameter]
    public EventCallback DisplayCreate { get; set; }

    [Parameter]
    public BLL.Music.Service Service { get; set; }

    [Parameter]
    public DTO.Music.Album Album { get; set; }

    private List<DTO.Common.ValuePair> myGenreList;

    protected override void OnInitialized()
    {
        if (Album == null)
        {
            Album = new DTO.Music.Album();
        }

        //myGenreList = await Service.GetGenreList();
    }

    private async Task ButtonNewTrack(DTO.Music.CD tempCd)
    {
        if (tempCd != null)
        {
            tempCd.TrackList ??= new List<DTO.Music.Track>();
            tempCd.TrackList.Add(new DTO.Music.Track { Number = tempCd.TrackList.Count + 1 });
        }
    }

    private async Task ButtonNewCD()
    {
        Album.CDList ??= new List<DTO.Music.CD>();
        Album.CDList.Add(new DTO.Music.CD());
    }

    private async Task ButtonSave()
    {
        try
        {
            await Service.SaveItemAsync(Album);

            if(Service.Response.ErrorList != null && Service.Response.ErrorList.Count == 0)
            {
                await DisplayCreate.InvokeAsync(); 
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error saving album: {ex.Message}");
        }
    }

    private async Task ButtonCancel()
    {
        Service.Response.ErrorList.Clear();
        await DisplayCreate.InvokeAsync();
    }
}
